{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
  },
  "files": ["index.ts"],
  "include": ["src/*"],
  "exclude": ["node_modules/**/*"]
}
